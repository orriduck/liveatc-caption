{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Development",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "liveatc_backend.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Supabase: DB Migration",
            "type": "debugpy",
            "request": "launch",
            "module": "supabase",
            "args": [
                "db",
                "push"
            ],
            "cwd": "${workspaceFolder}/liveatc_backend/supabase",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}